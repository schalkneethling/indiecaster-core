---
import { customProperties } from "../utils/custom-properties";

const { centred, label, type, url } = Astro.props;

const {
  colorSecondaryColor,
  colorSecondaryForegroundColor,
  colorSecondaryColorLight,
} = customProperties;
---

{
  type === "link" && (
    <a
      href={url}
      class:list={["button", "button-primary", { centred: centred }]}
    >
      {label}
    </a>
  )
}

<style
  define:vars={{
    colorSecondaryColor,
    colorSecondaryForegroundColor,
    colorSecondaryColorLight,
  }}
>
  .button-primary {
    background-color: var(--colorSecondaryColor);
    color: var(--colorSecondaryForegroundColor);
    font-weight: bold;
  }

  .button-primary.centred {
    text-align: center;
  }

  .button-primary:hover,
  .button-primary:focus {
    background-color: var(--colorSecondaryColorLight);
  }
</style>
