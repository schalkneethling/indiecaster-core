---
/**
 * Setup Wizard - Step 5: First Episode (Optional)
 *
 * Allows users to create their first podcast episode
 */

import SetupLayout from '../../components/setup/SetupLayout.astro';
import FormField from '../../components/setup/FormField.astro';
import FormActions from '../../components/setup/FormActions.astro';
---

<SetupLayout title="Add Your First Episode" currentStep={5}>
  <form id="episode-form" class="setup-form">
    <div class="optional-banner">
      <svg width="24" height="24" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div>
        <strong>This step is optional!</strong>
        <p>You can add your first episode now to get started, or skip this step and add episodes later.</p>
      </div>
    </div>

    <p class="form-intro">
      Upload your first podcast episode. Make sure your audio file is in MP3 format
      for the best compatibility across podcast platforms.
    </p>

    <FormField
      label="Episode Title"
      name="title"
      type="text"
      placeholder="Episode 1: Welcome to the Show"
      helpText="A clear, descriptive title for your episode"
    />

    <FormField
      label="Episode Description"
      name="description"
      type="textarea"
      placeholder="In this episode, we discuss..."
      helpText="A detailed description of what listeners can expect (supports markdown)"
      rows={6}
    />

    <div class="form-row">
      <FormField
        label="Publish Date"
        name="pubDate"
        type="date"
        helpText="When should this episode be published?"
      />

      <FormField
        label="Duration"
        name="duration"
        type="text"
        placeholder="45:30"
        pattern="^([0-9]{1,2}:)?[0-9]{1,2}:[0-9]{2}$"
        helpText="Format: MM:SS or HH:MM:SS"
      />
    </div>

    <div class="form-row">
      <FormField
        label="Season"
        name="season"
        type="number"
        placeholder="1"
        helpText="Season number (optional)"
      />

      <FormField
        label="Episode Number"
        name="episode"
        type="number"
        placeholder="1"
        helpText="Episode number (optional)"
      />
    </div>

    <div class="form-field">
      <label class="form-label">
        Episode Audio File
      </label>
      <div class="audio-upload-area">
        <div class="upload-status" id="upload-status">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
          </svg>
          <p class="upload-message">Upload your episode audio file</p>
          <p class="upload-details">MP3 format, max 500MB</p>
        </div>
        <div class="upload-controls">
          <input
            type="file"
            id="audio-file"
            name="audioFile"
            accept="audio/mpeg,audio/mp3"
            style="display: none;"
          />
          <button type="button" class="btn-upload" id="upload-trigger">
            Choose Audio File
          </button>
          <button type="button" class="btn-remove" id="remove-audio" style="display: none;">
            Remove File
          </button>
        </div>
      </div>
      <p class="help-text">
        Your audio file will be stored in the <code>public/audio/episodes/</code> directory.
      </p>
    </div>

    <div class="form-field checkbox-field">
      <label class="checkbox-label">
        <input type="checkbox" name="explicit" value="true" />
        <span class="checkbox-text">
          <strong>Explicit Content</strong>
          <span class="checkbox-help">Check this if your episode contains explicit language or adult content</span>
        </span>
      </label>
    </div>

    <div class="info-box">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div>
        <strong>Tip:</strong> Don't have an episode ready? No problem! You can skip this step
        and add episodes later by creating markdown files in the <code>src/content/episodes/</code> directory
        or by using the IndieCaster CLI tools.
      </div>
    </div>

    <FormActions
      backUrl="/setup/social"
      nextLabel="Continue"
      showSkip={true}
      skipUrl="/setup/deploy"
    />
  </form>

  <style>
    .setup-form {
      max-width: 600px;
    }

    .optional-banner {
      display: flex;
      gap: 1rem;
      padding: 1.25rem;
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      border-radius: 8px;
      margin-bottom: 2rem;
      border: 2px solid #fbbf24;
    }

    .optional-banner svg {
      color: #d97706;
      flex-shrink: 0;
    }

    .optional-banner strong {
      display: block;
      color: #78350f;
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }

    .optional-banner p {
      color: #92400e;
      font-size: 0.9375rem;
      line-height: 1.5;
      margin: 0;
    }

    .form-intro {
      font-size: 1rem;
      line-height: 1.75;
      color: #6b7280;
      margin-bottom: 2rem;
    }

    .form-field {
      margin-bottom: 1.5rem;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.5rem;
      font-size: 0.9375rem;
    }

    .help-text {
      margin-top: 0.5rem;
      font-size: 0.875rem;
      color: #6b7280;
      line-height: 1.5;
    }

    .help-text code {
      background: #f3f4f6;
      padding: 0.125rem 0.375rem;
      border-radius: 3px;
      font-size: 0.8125rem;
      font-family: 'Monaco', 'Courier New', monospace;
    }

    .audio-upload-area {
      padding: 2rem;
      border: 2px dashed #e5e7eb;
      border-radius: 8px;
      background: #f9fafb;
      text-align: center;
    }

    .upload-status {
      margin-bottom: 1.5rem;
    }

    .upload-status svg {
      color: #9ca3af;
      margin: 0 auto 1rem;
    }

    .upload-status.has-file svg {
      color: #10b981;
    }

    .upload-message {
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }

    .upload-details {
      color: #6b7280;
      font-size: 0.875rem;
      margin: 0;
    }

    .upload-controls {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn-upload,
    .btn-remove {
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.9375rem;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
      font-family: inherit;
    }

    .btn-upload {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-upload:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-remove {
      background: white;
      color: #ef4444;
      border: 2px solid #ef4444;
    }

    .btn-remove:hover {
      background: #fef2f2;
    }

    .checkbox-field {
      margin-top: 2rem;
    }

    .checkbox-label {
      display: flex;
      gap: 0.75rem;
      cursor: pointer;
      align-items: flex-start;
    }

    .checkbox-label input[type="checkbox"] {
      margin-top: 0.25rem;
      width: 18px;
      height: 18px;
      cursor: pointer;
      flex-shrink: 0;
    }

    .checkbox-text {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .checkbox-text strong {
      color: #1f2937;
      font-size: 0.9375rem;
    }

    .checkbox-help {
      color: #6b7280;
      font-size: 0.875rem;
      line-height: 1.5;
    }

    .info-box {
      display: flex;
      gap: 0.75rem;
      padding: 1rem;
      background: #eff6ff;
      border-left: 3px solid #3b82f6;
      border-radius: 4px;
      margin-bottom: 2rem;
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    .info-box svg {
      color: #3b82f6;
      flex-shrink: 0;
      margin-top: 0.125rem;
    }

    .info-box strong {
      color: #1e40af;
    }

    .info-box code {
      background: white;
      padding: 0.125rem 0.375rem;
      border-radius: 3px;
      font-size: 0.8125rem;
      font-family: 'Monaco', 'Courier New', monospace;
    }

    @media (max-width: 640px) {
      .form-row {
        grid-template-columns: 1fr;
      }

      .upload-controls {
        flex-direction: column;
      }

      .btn-upload,
      .btn-remove {
        width: 100%;
      }
    }
  </style>

  <script>
    const form = document.getElementById('episode-form') as HTMLFormElement;
    const fileInput = document.getElementById('audio-file') as HTMLInputElement;
    const uploadTrigger = document.getElementById('upload-trigger') as HTMLButtonElement;
    const removeButton = document.getElementById('remove-audio') as HTMLButtonElement;
    const uploadStatus = document.getElementById('upload-status') as HTMLElement;
    const uploadMessage = uploadStatus?.querySelector('.upload-message') as HTMLElement;
    const uploadDetails = uploadStatus?.querySelector('.upload-details') as HTMLElement;

    let selectedFile: File | null = null;

    // Trigger file input when button clicked
    uploadTrigger?.addEventListener('click', () => {
      fileInput?.click();
    });

    // Handle file selection
    fileInput?.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      const file = target.files?.[0];

      if (file) {
        // Validate file type
        if (!file.type.match(/^audio\/(mpeg|mp3)$/)) {
          alert('Please select an MP3 audio file');
          return;
        }

        // Validate file size (500MB max)
        if (file.size > 500 * 1024 * 1024) {
          alert('Audio file must be smaller than 500MB');
          return;
        }

        selectedFile = file;

        // Update UI
        if (uploadStatus) {
          uploadStatus.classList.add('has-file');
        }
        if (uploadMessage) {
          uploadMessage.textContent = '✓ Audio file selected';
        }
        if (uploadDetails) {
          const sizeMB = (file.size / (1024 * 1024)).toFixed(1);
          uploadDetails.textContent = `${file.name} (${sizeMB} MB)`;
        }
        if (removeButton) {
          removeButton.style.display = 'inline-block';
        }
      }
    });

    // Handle remove button
    removeButton?.addEventListener('click', () => {
      selectedFile = null;
      if (fileInput) {
        fileInput.value = '';
      }
      if (uploadStatus) {
        uploadStatus.classList.remove('has-file');
      }
      if (uploadMessage) {
        uploadMessage.textContent = 'Upload your episode audio file';
      }
      if (uploadDetails) {
        uploadDetails.textContent = 'MP3 format, max 500MB';
      }
      if (removeButton) {
        removeButton.style.display = 'none';
      }
    });

    // Form submission
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Check if any fields are filled
      const formData = new FormData(form);
      const hasData = Array.from(formData.entries()).some(([key, value]) => {
        if (key === 'audioFile') return false; // Check file separately
        return value.toString().trim() !== '';
      });

      if (!hasData && !selectedFile) {
        // Nothing filled out, treat as skip
        window.location.href = '/setup/deploy';
        return;
      }

      // If some fields are filled, validate required fields
      if (hasData || selectedFile) {
        const title = formData.get('title')?.toString().trim();
        const description = formData.get('description')?.toString().trim();
        const pubDate = formData.get('pubDate')?.toString().trim();
        const duration = formData.get('duration')?.toString().trim();

        if (!title || !description || !pubDate || !duration) {
          alert('Please fill in all required fields: Title, Description, Publish Date, and Duration');
          return;
        }

        if (!selectedFile) {
          alert('Please select an audio file for your episode');
          return;
        }
      }

      try {
        const response = await fetch('/api/setup/create-episode', {
          method: 'POST',
          body: formData,
        });

        if (response.ok) {
          // Store episode data in localStorage as backup
          const data: Record<string, string> = {};
          formData.forEach((value, key) => {
            if (key !== 'audioFile') {
              data[key] = value.toString();
            }
          });
          if (selectedFile) {
            data.audioFileName = selectedFile.name;
          }
          localStorage.setItem('episode-info', JSON.stringify(data));

          // Navigate to next step
          window.location.href = '/setup/deploy';
        } else {
          const error = await response.json();
          alert(`Error: ${error.message || 'Failed to create episode'}`);
        }
      } catch (error) {
        // For now, just store in localStorage and continue
        // This allows development without API endpoints
        console.warn('API endpoint not available, storing in localStorage');

        const data: Record<string, string> = {};
        formData.forEach((value, key) => {
          if (key !== 'audioFile') {
            data[key] = value.toString();
          }
        });
        if (selectedFile) {
          data.audioFileName = selectedFile.name;
        }
        localStorage.setItem('episode-info', JSON.stringify(data));
        window.location.href = '/setup/deploy';
      }
    });

    // Load saved data if available
    const savedData = localStorage.getItem('episode-info');
    if (savedData) {
      try {
        const data = JSON.parse(savedData);
        Object.keys(data).forEach(key => {
          if (key === 'audioFileName') {
            // Show that a file was selected
            if (uploadStatus) {
              uploadStatus.classList.add('has-file');
            }
            if (uploadMessage) {
              uploadMessage.textContent = '✓ Audio file selected';
            }
            if (uploadDetails) {
              uploadDetails.textContent = data[key];
            }
            if (removeButton) {
              removeButton.style.display = 'inline-block';
            }
            return;
          }

          const element = form?.elements.namedItem(key) as HTMLInputElement;
          if (element) {
            if (element.type === 'checkbox') {
              element.checked = data[key] === 'true';
            } else {
              element.value = data[key];
            }
          }
        });
      } catch (error) {
        console.error('Failed to load saved data:', error);
      }
    }
  </script>
</SetupLayout>
